<!DOCTYPE html>
<html>
<head>
    <!-- Add your CSS and JavaScript includes here -->
</head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id={{analyticsId}}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '{{analyticsId}}');
</script>
<body>
    <a href="/classes/{{class._id}}/lessons">Back to lesson</a>
    <h2>Edit Lesson</h2>

    <form id="editLessonForm" method="post" action="/classes/{{class._id}}/lessons/{{lesson.lesson_number}}/edit">
        <!-- Lesson Number Input -->
        <div class="span-6">
            <label>Lesson Number:</label>
            <input type="text" name="lesson_number" value="{{lesson.lesson_number}}">
        </div>

        <!-- Lesson Title Input -->
        <div class="span-6">
            <label>Lesson Title:</label>
            <input type="text" name="lesson_title" value="{{lesson.lesson_title}}">
        </div>

        <!-- Lesson Body Textarea -->
        <div class="span-12">
            <label>Lesson Body:</label>
            <textarea name="lesson_body">{{lesson.lesson_body}}</textarea>
        </div>

        <!-- Lesson Code Textarea -->
        <div class="span-12">
            <label>Lesson Code:</label>
            <textarea name="lesson_code">{{lesson.lesson_code}}</textarea>
        </div>

        <div class="span-12">
            <label>Lesson Result:</label>
            <textarea name="lesson_result_script1">{{lesson.lesson_result_script1}}</textarea>
        </div>

        <!-- Lesson Body Textarea -->
        <div class="span-12">
            <label>Lesson Body:</label>
            <textarea name="lesson_body2">{{lesson.lesson_body2}}</textarea>
        </div>

        <!-- Lesson Code Textarea -->
        <div class="span-12">
            <label>Lesson Code:</label>
            <textarea name="lesson_code2">{{lesson.lesson_code2}}</textarea>
        </div>

        <div class="span-12">
            <label>Lesson Result 2:</label>
            <textarea name="lesson_result_script2">{{lesson.lesson_result_script2}}</textarea>
        </div>

        <!-- Lesson Body Textarea -->
        <div class="span-12">
            <label>Lesson Body:</label>
            <textarea name="lesson_body3">{{lesson.lesson_body3}}</textarea>
        </div>

        <!-- Lesson Code Textarea -->
        <div class="span-12">
            <label>Lesson Code:</label>
            <textarea name="lesson_code3">{{lesson.lesson_code3}}</textarea>
        </div>

        <div class="span-12">
            <label>Lesson Result 3:</label>
            <textarea name="lesson_result_script3">{{lesson.lesson_result_script3}}</textarea>
        </div>

        <!-- Submit Button -->
        <div>
            <input type="submit" value="Update Lesson">
        </div>
    </form>
</body>
</html>
